@model CSForum.IdentityServer.Models.LoginViewModel


<div class="container">
    <div class="screen">
        <div class="screen__content">
            <form id="login" asp-controller="AuthCS" asp-action="Login" method="post" class="login">
                <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Model.ReturnUrl"/>
                <div class="login__field">
                    <i class="login__icon fas fa-user"></i>
                    <input type="text" class="login__input" placeholder="User name"
                           name="Username" id="Username" required>
                </div>
                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    <input
                        name="Password" id="Password"
                        type="password" class="login__input" placeholder="Password">
                </div>
                <div class="social">
                    <button type="submit" class="button login__submit">
                        <span class="button__text">Log In Now</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </button>
                </div>
                <a asp-action="Register" asp-route-ReturnUrl="@Model.ReturnUrl" class="social">
                    <div  class="button login__submit">
                        <span class="button__text">Register</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </div>
                </a>

            </form>
            <form asp-controller="AuthCS" asp-action="ExternalProvider" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="social">
                    @foreach (var extProv in @Model.ExternalProviders)
                    {
                        <button style="margin: 0; width: fit-content;" type="submit" class=" button login__submit"
                                name="provider" value="@extProv.Name" class="go">
                            @extProv.Name
                        </button>
                    }
                </div>
            </form>

        </div>
        <div class="screen__background">
            <span class="screen__background__shape screen__background__shape4"></span>
            <span class="screen__background__shape screen__background__shape3"></span>
            <span class="screen__background__shape screen__background__shape2"></span>
            <span class="screen__background__shape screen__background__shape1"></span>
        </div>

    </div>
</div>