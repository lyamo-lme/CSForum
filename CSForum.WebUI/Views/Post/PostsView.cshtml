@model List<CSForum.Shared.Models.ViewModels.PostViewModel>

@{
    ViewBag.Title = "Main page - Posts";
    Layout = "_Layout";
}
<div>
    <h2>Recent posts</h2>
    <ul class="recent-posts">
        @foreach (var post in @Model)
        {
            <li class="element">
                <a asp-controller="Post" asp-action="Post" asp-route-postId="@post.Id">@post.Title</a>
                <p>Created: @post.DateCreate</p>
            </li>
        }
    </ul>
</div>