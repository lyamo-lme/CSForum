@using Microsoft.AspNetCore.Mvc.Localization
@model List<CSForum.Shared.Models.ViewModels.PostViewModel>?
@inject IViewLocalizer ViewLocalizer
<div class="user-info-list">
    @if (@Model != null)
    {
        foreach (var post in @Model)
        {
            <a asp-controller="Post" asp-action="Post" asp-route-postId="@post.Id">
                <div> @post.Title</div>
            </a>
        }
    }
    @if (@Model.Count == 0)
    {
        <a asp-controller="Post" asp-action="CreatePost" >
            <div>@ViewLocalizer["NotPosts"]</div>
        </a>
    }
</div>