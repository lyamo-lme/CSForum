@model CSForum.Core.Models.Tag

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>@Model.Name</h1>
@if (@Model.Posts != null)
{
    <div>
        @foreach (var post in @Model.Posts)
        {
            <div>
                <a asp-controller="Post" asp-action="Post" asp-route-postId="@post.Id">
                    @post.Title
                </a>
            </div>
        }
    </div>
}